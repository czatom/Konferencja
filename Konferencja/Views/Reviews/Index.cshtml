@model IEnumerable<Konferencja.Models.Review>

@{
    ViewBag.Title = "Index";
}

<h2>Indeks</h2>

<p>
    @Html.ActionLink("Stwórz nowy element", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Publication.Title)
        </th>
