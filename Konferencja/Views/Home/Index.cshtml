@model IEnumerable<Konferencja.Models.Conference>

@{
    ViewBag.Title = "Strona główna";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div>
    <h3>Najbliższe konferencje:</h3>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Theme)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Theme)
                </td>
                <td>
                    @Html.ActionLink("Szczegóły", "Details", "Conferences", new { id = item.ID }, null) |
                    @Html.ActionLink("Dodaj publikację", "CreateForConference", "Publications", new { conferenceID = item.ID }, null)
                </td>
            </tr>
        }

    </table>
</div>